{
  "name": "raf-mapa-producao-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "db:studio": "dotenv -e server/.env -- prisma studio --schema=server/src/prisma/schema.prisma",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:server": "cd server && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:server && npm run build:frontend",
    "build:server": "cd server && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd server && npm install && cd ../frontend && npm install",
    "start": "concurrently \"npm run start:server\" \"npm run start:frontend\"",
    "start:server": "cd server && npm start",
    "start:frontend": "cd frontend && npm run preview -- --port 3004"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/compression": "^1.8.1",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^8.0.0",
    "prisma": "^6.9.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "compression": "^1.8.1"
  }
}
